modules = ["python-3.12"]
run = "cd src && uvicorn truck_agent.main:app --port 8080"

[env]
PYTHONUNBUFFERED = "1"

[nix]
channel = "stable-24_05"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "cd src && uvicorn truck_agent.main:app --port 8080"]

[[ports]]
localPort = 8080
externalPort = 80
exposeLocalhost = true
