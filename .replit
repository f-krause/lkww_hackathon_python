run = "pip install . && run"
modules = ["python-3.10"]

[env]
PYTHONUNBUFFERED = "1"

[nix]
channel = "stable-24_05"
pkgs = ["python310Packages.pip"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "pip install . && python3 main.py"]

[[ports]]
localPort = 8080
externalPort = 80
exposeLocalhost = true
